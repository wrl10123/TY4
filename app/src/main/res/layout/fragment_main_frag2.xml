<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeff2" >

    <ScrollView
        android:id="@+id/main_frg2_scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  >
        <LinearLayout
            android:id="@+id/fenlai_ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/fenlei_ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <!-- 这里将要有一个 适配器，预留位置-->

    </ScrollView>

    <ImageView
        android:id="@+id/fra2_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_frg2_scrollView1"
        android:scaleType="fitStart"
        android:src="@drawable/zhuanti" />
</RelativeLayout>
