<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeff2"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/img_info_relative1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="#FFF">
        <!-- 个人图像 -->
        <ImageView
            android:id="@+id/img_info_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/head3"
            android:scaleType="centerCrop" />
        <!-- 显示一个用户名 -->
        <TextView
            android:id="@+id/img_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/img_info_head"
            android:textSize="16sp"
            android:text="滑头小子z"/>

        <ImageView
            android:id="@+id/img_info_button1"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/guanzhu3" />
        <!-- 作品的大图 -->
        <ImageView
            android:id="@+id/img_info_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_info_name"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/jita"/>
        <!-- 作品的名字 -->
        <TextView
            android:id="@+id/img_info_imgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_info_photo"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:text="弹吉他的女孩"/>

        <RelativeLayout
            android:id="@+id/img_info_relative3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/img_info_imgName">

            <ImageView
                android:id="@+id/img_info_dianzan"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/dianzan1" />

            <TextView
                android:id="@+id/img_info_dianzan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/img_info_dianzan"
                android:text="66"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/img_indo_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/img_info_dianzan2"
                android:text="评论(45)"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/img_indo_zhuanfa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:text="转发"
                android:textSize="16dp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
